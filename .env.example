# ===============================
# ðŸ§  DocuChat Environment Template
# ===============================

# ---------- GENERAL ----------
APP_NAME=DocuChat
ENV=development
DEBUG=True

# ---------- SECURITY ----------
# Secret for signing JWTs (replace for production)
JWT_SECRET=change-this-in-production
JWT_ALG=HS256

# ---------- DATABASE ----------
# SQLite for local, can replace with PostgreSQL in cloud
DATABASE_URL=sqlite:///./docuchat_backend/db/docuchat.db

# ---------- CHROMA VECTOR DB ----------
# Local persistent directory (ensure it exists)
CHROMA_DB_DIR=./docuchat_backend/chroma_db
CHROMA_COLLECTION=docuchat

# ---------- EMBEDDINGS ----------
# SentenceTransformer model
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# ---------- OPENAI ----------
# OpenAI API key (mandatory for summaries + RAG answers)
OPENAI_API_KEY=sk-xxxxx_your_key_here
OPENAI_MODEL=gpt-4o-mini

# ---------- OCR / PDF ----------
# Tesseract executable path (Windows)
TESSERACT_EXE=C:\Program Files\Tesseract-OCR\tesseract.exe

# Poppler bin path (Windows)
POPLER_BIN_DIR=C:\Tools\poppler-25.07.0\Library\bin

# ---------- FILE STORAGE ----------
UPLOAD_DIR=./docuchat_backend/app/uploads

# ---------- LOGGING ----------
LOG_LEVEL=INFO
LOG_FILE=./logs/docuchat.log

# ---------- FRONTEND (OPTIONAL) ----------
# API base for Streamlit to call (update for cloud)
API_BASE=http://127.0.0.1:8000
# Example for Render or other cloud app:
# API_BASE=https://your-docuchat-backend.onrender.com
